{
  "name": "@truffle/codec-components",
  "description": "UI component library for @truffle/codec data",
  "version": "0.1.0-canary-2",
  "keywords": [
    "solidity",
    "ethereum",
    "react",
    "ui",
    "components",
    "truffle"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "cliffoo <41348973+cliffoo@users.noreply.github.com>",
  "type": "module",
  "files": [
    "./dist/react/index.{js,js.map,d.ts,css}"
  ],
  "exports": {
    "./react": "./dist/react/index.js",
    "./react-styles": "./dist/react/index.css"
  },
  "typesVersions": {
    "*": {
      "./react": [
        "./dist/react/index.d.ts"
      ]
    }
  },
  "main": "./dist/react/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && node ./scripts/build.js",
    "docs": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@truffle/codec": "^0.15.1"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.35.1",
    "@types/bn.js": "^5.1.1",
    "@types/react": ">=16.9.0",
    "@types/react-dom": ">=16.9.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-react": "^4.0.0",
    "bn.js": "^5.2.1",
    "eslint": "^8.41.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "sass": "^1.62.1",
    "typescript": "^4.9.5",
    "vite": "^4.3.9"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
